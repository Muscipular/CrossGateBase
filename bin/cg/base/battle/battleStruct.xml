<?xml version="1.0" encoding="UTF-8"?>
<struct>
	<actionInfo note="split by :">
		<!-- the action's index.Please see {Sprite.ACTION_, ...}. -->
		<value type="byte">ACTION_INFO_ID</value>
		<!-- if this action will show a damage or a cure or another word, this is the word type. -->
		<value type="byte">ACTION_INFO_WORD_TYPE</value>
		<!-- if this action will show a damage or a cure or another word, this is the word or word resource id. -->
		<value type="String">ACTION_INFO_WORD</value>
		<!-- if this action have some attach animations this is the count of animations. -->
		<value type="byte">ACTION_INFO_ATTACH_COUNT</value>
		<!-- if this action have some attach animations this is the animations array. -->
		<value type="int[]">ACTION_INFO_ATTACH</value>
	</actionInfo>

	<action name="BuffAction">
		<attribute name="type" type="byte">
			<value>TYPE_BUFF</value>
		</attribute>
		<attribute name="param" type="String[]">
			<!-- if a creature shout something, must in a channel. -->
			<value type="int">BUFF_SHOUT_CHANNEL</value>
			<!-- this is the message what the creature shout. -->
			<value type="String">BUFF_SHOUT_MESSAGE</value>
			<!-- the action's info. -->
			<value type="String[]">BUFF_ACTION</value>
		</attribute>
	</action>
</struct>